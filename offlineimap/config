[general]
pythonfile      = $XDG_CONFIG_HOME/offlineimap/offlineimap.py
metadata        = $XDG_DATA_HOME/offlineimap/metadata
accounts        = Personal,UGA
maxsyncaccounts = 6
ui              = ttyui

[mbnames]
enabled         = yes
filename        = $XDG_DATA_HOME/mutt/mailboxes
header          = "mailboxes "
peritem         = "+%(accountname)s/%(foldername)s"
sep             = " "
footer          = "\n"

[Account Personal]
localrepository = Personal-Local
remoterepository = Personal-Remote

[Account UGA]
localrepository = UGA-Local
remoterepository = UGA-Remote

[Repository Personal-Local]
type = Maildir
localfolders = $XDG_DATA_HOME/offlineimap/mail/Personal

[Repository UGA-Local]
type = Maildir
localfolders = $XDG_DATA_HOME/offlineimap/mail/UGA

[Repository Personal-Remote]
type = Gmail
remoteuser = guthrie.armstrong@gmail.com
remotepasseval = get_pass("Google_mutt")
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
auth_mechanisms = LOGIN

[Repository UGA-Remote]
type = IMAP
remotehost = outlook.office365.com
remoteuser = gma84213@uga.edu
remotepasseval = get_pass("school/UGA-MyID")
auth_mechanisms = LOGIN
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder not in ['Calendar', 'Calendar/Birthdays', 'Calendar/United States holidays', 'Contacts', 'Contacts/Skype for Business Contacts', 'Deleted Items', 'Journal', 'Notes', 'Sync Issues', 'Sync Issues/Conflicts', 'Sync Issues/Local Failures', 'Sync Issues/Server Failures', 'Tasks']
