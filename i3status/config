general {
    output_format = "i3bar"
    colors = true
    interval = 10
    separator = ""
}

order += "battery 0"
order += "battery 1"
order += "tztime local"

battery 0 {
        format = "%percentage %status"
        integer_battery_capacity = true
        last_full_capacity = true
        format_down = "NONE"
        status_chr = "CHR"
        status_bat = "DIS"
        status_unk = ""
        status_full = ""
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 25
        threshold_type = percentage
}

battery 1 {
        format = "%percentage %status"
        integer_battery_capacity = true
        last_full_capacity = true
        format_down = "NONE"
        status_chr = "CHR"
        status_bat = "DIS"
        status_unk = ""
        status_full = ""
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 25
        threshold_type = percentage
}

tztime local {
        format = "    %Y-%m-%d %H:%M    "
}
