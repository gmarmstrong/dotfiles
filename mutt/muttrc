# General, sorted lexicographically with :sort /set /
  set crypt_replysign   = yes
  set crypt_replysignencrypted = yes
  set delete            = yes
  set forward_format    = "Fwd: %s"
  set forward_quote
  set header_cache      = "$XDG_CACHE_HOME/mutt/cache/header"
unset help
  set include
  set index_format      = "%4C %Z %[%b %d] %-30.30L %s"
  set mailcap_path      = "$XDG_CONFIG_HOME/mutt/mailcap"
  set mbox_type         = Maildir
  set message_cachedir  = "$XDG_CACHE_HOME/mutt/cache/message"
  set pgp_auto_decode   = yes
  set pgp_sign_as       = 9497A5EC433A4476190F3066100B37EAF2164C8B
  set pgp_use_gpg_agent = yes
  set realname          = "Guthrie McAfee Armstrong"
  set reverse_alias     = yes
  set sendmail          = /usr/bin/msmtp
  set sort              = threads
  set sort_alias        = alias
  set sort_aux          = reverse-last-date-received
  set sort_browser      = date
  set text_flowed       = yes
  set tmpdir            = "$XDG_CACHE_HOME/mutt/tmp"
  set use_from          = yes

# Colors
color status    color000 color250
color indicator color000 color250
color error     color160 color000

# Autoview
auto_view text/html

# Folder hooks
folder-hook Personal/* "source $XDG_CONFIG_HOME/mutt/accounts/personal"
folder-hook UGA/* "source $XDG_CONFIG_HOME/mutt/accounts/uga"

# Source other files
source "$XDG_CONFIG_HOME/mutt/accounts/personal"    # Default account
source "$XDG_CONFIG_HOME/mutt/gpg.rc"
source "$XDG_CONFIG_HOME/mutt/macros"
source "$XDG_DATA_HOME/mutt/mailboxes"
source "gpg --decrypt --quiet $XDG_CONFIG_HOME/mutt/contacts.gpg |"
