# IMAP
set folder="$HOME/.local/share/offlineimap/mail/Personal"
set spoolfile="+Inbox"
set mbox="+[Gmail].All Mail"
set trash="+[Gmail].Trash"

# SMTP
set from="guthrie.armstrong@gmail.com"
set sendmail="msmtp -a Personal"
set postponed="+[Gmail].Drafts"
set record="+[Gmail].Sent"

# Account-specific macros
macro index s "<save-message>=[Gmail].All Mail<enter><enter>" "Archive"
