# General preferences
browser open
reload-threads 6
refresh-on-startup yes
goto-next-feed no
text-width 80 # Only works properly with newsboat
download-path ~/Download
bind-key O open-all-unread-in-browser-and-mark-read

# Unbind dangerous keys
unbind-key A
unbind-key C

# Color
color background white black
color listnormal white black
color listfocus white color250
color listnormal_unread white black bold
color listfocus_unread white color250 bold
color info white black bold
color article white black

# Title formatting
feedlist-title-format "Unread feeds: %u"
articlelist-title-format "Unread articles: %u"
searchresult-title-format "Unread articles matching search: %u"
selecttag-title-format "Select Tag"
selectfilter-title-format "Select Filter"
itemview-title-format "Unread articles in feed: %u"
urlview-title-format "URLs"
urlview-title-format "Dialogs"
show-keymap-hint no

# Formatting
feedlist-format "%U %t"
articlelist-format "%t"
highlight article "^Feed: .*$" white default
highlight article "^Title: .*$" white default bold
highlight article "^(Author|Link|Podcast Download URL):.*$" black black

# Use vi-like page(up|down) while retaining show-urls.
bind-key u pageup
bind-key d pagedown
bind-key U show-urls

# Basic vi-like navigation
bind-key    K up
bind-key    K prev
bind-key    J down
bind-key    J next
bind-key    k up
bind-key    j down
