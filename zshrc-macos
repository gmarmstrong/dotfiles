# Zsh plugins
plugins=(git git-flow osx zsh-history-substring-search)
bindkey -M vicmd 'k' history-substring-search-up
bindkey -M vicmd 'j' history-substring-search-down

# Aliases
alias vim='/usr/local/Cellar/macvim/8.0-136/MacVim.app/Contents/MacOS/Vim'

# Add ~/bin to path
export PATH="~/bin:$PATH"

# Calibre CLI
export PATH="/Applications/calibre.app/Contents/console.app/Contents/MacOS:$PATH"

# iTerm2 configuration 
test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"
DISABLE_AUTO_TITLE="true"

# Fix italics highlighting
export TERM="iterm2"
