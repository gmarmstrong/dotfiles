# file management aliases
alias tree="tree -a -I '__pycache__|*.pyc|target|.git|.sass-cache'"
alias ls="LC_COLLATE=C ls --color=auto -GFH -w 80"
alias ll="LC_COLLATE=C ls --color=auto -GFHA -w 80"
alias l="LC_COLLATE=C ls --color=auto -GFHAlh -w 80"
alias space="sudo find -maxdepth 1 -exec du -sh "{}" \; | sort -h"

# SSH aliases
alias nike='ssh -x gma@nike.cs.uga.edu'
alias nikex='ssh -Y gma@nike.cs.uga.edu'

# general aliases
alias new="newsboat -x reload print-unread"
alias news="newsboat"
alias sxiv="sxiv -b -a"

# backup aliases
alias backup="sudo rsync --delete-excluded -aAXv --exclude={'/dev/*','/proc/*','/sys/*','/tmp/*','/run/*','/mnt/*','/media/*','/var/backups/*','/var/lock/*','/var/run/*','/lost+found','/home/*/.cache/*','/home/*/.local/share/Trash/*','/home/*/.local/share/offlineimap/*'} / /media/usb"
