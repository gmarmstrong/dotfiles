#!/usr/bin/env zsh

# file management aliases
alias tree="tree -a -I '__pycache__|*.pyc|target|.git|.sass-cache'"
alias ls="LC_COLLATE=C ls --color=auto -FH -w 80"
alias ll="LC_COLLATE=C ls --color=auto -FHA -w 80"
alias l="LC_COLLATE=C ls --color=auto -FHAlh -w 80"
alias space="find -maxdepth 1 -exec du -sh "{}" \; | sort -h"
alias suspace="sudo find -maxdepth 1 -exec du -sh "{}" \; | sort -h"

# SSH aliases
alias nike='ssh -x gma@nike.cs.uga.edu'
alias nikex='ssh -Y gma@nike.cs.uga.edu'

# general aliases
alias new="newsboat -x reload print-unread"
alias news="newsboat"
alias sxiv="sxiv -b -a"
alias led="ledger --pedantic -f $HOME/resources/papers/finance/ledger/journal.txt"
alias zathura="zathura --fork"

# neovim aliases
command -v nvim >/dev/null 2>&1 && alias vim="nvim" && alias vi="nvim"

# backup aliases
alias backup="sudo rsync --verbose --delete-excluded -aAXv --exclude={'/dev/*','/proc/*','/sys/*','/tmp/*','/run/*','/mnt/*','/media/*','/var/backups/*','/var/lock/*','/var/run/*','/lost+found','/home/*/.cache/*','/home/*/.local/share/Trash/*','/home/*/VirtualBox VMs/*','/home/*/.local/share/offlineimap/*','/home/*/nltk_data'} / /media/usb"
