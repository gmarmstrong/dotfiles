# Verbosity
verbose=blank,footnote,label,new-id,affected,edit,special,project,sync,unwait

# Files
data.location=~/.local/share/task

# Color theme
include /usr/share/taskwarrior/dark-256.theme

# Default command
report.custom.columns=id,project,tags,recur,due.relative,description
report.custom.description=Things to do right now
report.custom.filter=status:pending and +READY
report.custom.labels=ID,Project,Tags,Recur,Due,Description
report.custom.sort=due+,project+
default.command=custom

# Executive report
report.executive.columns=project,due,description
report.executive.description=Daily executive report
report.executive.filter=status:pending and project.not:ThinkPad and project.not:iOS and +READY
report.executive.labels=Project,Due,Description
report.executive.sort=due+,project+
